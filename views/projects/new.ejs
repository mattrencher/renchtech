<% include ../partials/header %>

  <div class="row justify-content-center">
    <div class="col-md-12 text-center">
      <h1>Create a New Project</h1>  
    </div>
    
    <div class="col-xs-12 col-md-6 col-lg-4">
      <form action="/projects" method="POST">
        <div class="form-group">
          <label for="name">Name</label>
          <input class="form-control" type="text" name="name" placeholder="">
        </div>
        <div class="form-group">
          <label for="image">Image url</label>
          <input class="form-control" type="text" name="image" placeholder="">
        </div>
        <div class="form-group">
          <label for="description">Description</label>
          <textarea class="form-control" name="description" placeholder="" rows="4"></textarea>
        </div>
        <div class="form-group">
          <label for="video">Youtube Link</label>
          <input class="form-control" type="text" name="video" placeholder="">
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-default btn-block btn-primary">Submit!</button>
        </div>
      </form>
      <a href="/projects">Go Back</a>
    </div>
  </div>

<% include ../partials/footer %>