<% include ./partials/header %>
<div class="row">
  <div class="col-md-12 text-center">
    <h1>Reset Password</h1>
  </div>
  <div class="col-md-12">
    <form class="form-forgot" action="/reset/<%= token %>" method="POST">
      <h1 class="h3 mb-3 font-weight-normal">New Password</h1>
      <label for="inputEmail" class="sr-only">Email</label>
      <input type="password" id="inputPassword" class="form-control" name="password" placeholder="New Password" required autofocus>
      <input type="password" id="inputPassword" class="form-control" name="confirm" placeholder="Confirm Password" required autofocus>
      <button class="btn btn-lg btn-primary btn-block" type="submit" value="Reset Password">Submit</button>
    </form>
  </div>
</div>
<% include ./partials/footer %>