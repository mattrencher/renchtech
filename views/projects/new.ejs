<% include ../partials/header %>

  <div class="row justify-content-center"">
    <div class="col-md-12 text-center">
      <h1>Create a New Blog Project</h1>  
    </div>
    <div class="col-xs-12 col-md-6 col-lg-4">
      <form action="/projects" method="POST">
        <div class="form-group">
          <label for="name">Name</label>
          <input class="form-control" type="text" name="name" placeholder="Name">
        </div>
        <div class="form-group">
          <label for="image">Image URL</label>
          <input class="form-control" type="text" name="image" placeholder="Image url">
        </div>
        <div class="form-group">
          <label for="body">Body</label>
          <textarea class="form-control" type="text" name="body" placeholder="Body" rows="8"></textarea>
        </div>
        <div class="form-group">
          <label for="video">Video Link</label>
          <input class="form-control" type="text" name="video" placeholder="Youtube Link">
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-default btn-block btn-primary">Submit!</button>
        </div>
      </form>
      <a href="/projects">Go Back</a>
    </div>
  </div>

<% include ../partials/footer %>