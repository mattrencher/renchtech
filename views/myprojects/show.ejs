          <% if(currentUser && project.author.id.equals(currentUser._id) || currentUser && currentUser.isAdmin){ %>
            <a class="btn btn-xs btn-warning" href="/myprojects/<%= project._id %>/edit">Edit</a>
            <form class="delete-form" action="/myprojects/<%= project._id %>?_method=DELETE" method="POST">
              <button class="btn btn-xs btn-danger">DELETE</button>
          </form>
          <% } %>
        </div>
      </div>
