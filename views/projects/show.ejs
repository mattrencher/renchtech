<% include ../partials/header %>

  <div class="row">
    <div class="col-md-3">
      <p class="lead">RenchTech</p>
      <div class="list-group">
        <li class="list-group-item active">Info 1</li>
        <li class="list-group-item">Info 2</li>
        <li class="list-group-item">Info 3</li>
      </div>
      <!--MAP-->
    </div>
    <div class="col-md-9">
      <div class="thumbnail">
        <img class="img-responsive" src="<%= project.image %>">
        <div class="caption-full">
          <h4 class="pull-right">$<%= project.price %>/night</h4>
          <h4><a><%=project.name%></a></h4>
          <p><%= project.description %></p>
          <p>
            <em>Submitted by: <%= project.author.username %>, <%= moment(project.createdAt).fromNow() %></em>
          </p>
          <% if(currentUser && project.author.id.equals(currentUser._id)){ %>
            <a class="btn btn-xs btn-warning" href="/projects/<%= project._id %>/edit">Edit</a>
            <form class="delete-form" action="/projects/<%= project._id %>?_method=DELETE" method="POST">
              <button class="btn btn-xs btn-danger">DELETE</button>
          </form>
          <% } %>
        </div>
      </div>
      <div class="well">
        <div class="text-right">
          <a class="btn btn-success" href="/projects/<%= project._id %>/comments/new">Add New Comment</a>
        </div>
        <hr>
        <% project.comments.forEach(function(comment){ %>
          <div class="row">
            <div class="col-md-12">
              <strong><%= comment.author.username %> </strong>
              <span class="pull-right"><%= moment(comment.createdAt).fromNow() %></span>
              <p>
                <%= comment.text %>
              </p>
            <% if(currentUser && comment.author.id.equals(currentUser._id)){ %>
              <a class="btn btn-xs btn-warning" href="/projects/<%= project._id %>/comments/<%=comment._id %>/edit">
                Edit
              </a>
              <form class="delete-form" action="/projects/<%= project._id %>/comments/<%=comment._id %>?_method=DELETE" method="POST" >
                <input type="submit" class="btn btn-xs btn-danger" value="Delete">
              </form>
            <% } %>
            </div>
          </div>
          
        <% }) %>
      </div>
    </div>
  </div>


<% include ../partials/footer %>