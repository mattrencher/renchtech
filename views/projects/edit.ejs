<% include ../partials/header %>


  <div class="row">
    <h1 style="text-align: center;">Edit <%= project.name %> Campground</h1>
    <div style="width: 30%; margin: 25px auto;">
      <form action="/projects/<%= project._id %>?_method=PUT" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="project[name]" value=" <%= project.name %>">
        </div>
        <div class="form-group">
          <input class="form-control" type="number" name="project[price]" value="<%=project.price%>" min="0.01" step="0.01">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="project[image]" <%= project.image %>>
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="project[description]" <%= project.description %>>
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-default btn-block btn-primary">Submit!</button>
        </div>
      </form>
      <a href="/projects">Go Back</a>
    </div>
    
  </div>


<% include ../partials/footer %>