<%- include ("../partials/header") %>

  <div class="row justify-content-center">
    <div class="col-md-12 text-center">
      <h1>Create a New Project</h1>  
    </div>
    <div class="col-xs-12 col-md-6 col-lg-4">
      <form action="/community" method="POST">
        <div class="form-group">
          <label for="name">Name</label>
          <input class="form-control" type="text" name="project[name]" placeholder="">
        </div>
        <div class="form-group">
          <label for="image">Image url</label>
          <input class="form-control" type="text" name="project[image]" placeholder="">
        </div>
        <div class="form-group">
          <label for="description">Description</label>
          <textarea class="form-control" type="text" name="project[description]" placeholder="" rows="4"></textarea>
        </div>
        <div class="form-group">
          <label for="video">Youtube Link</label>
          <input class="form-control" type="text" name="project[video]" placeholder="">
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-default btn-block btn-primary">Submit!</button>
        </div>
      </form>
      <a href="/community">Go Back</a>
    </div>
  </div>

  <%- include ("../partials/footer") %>